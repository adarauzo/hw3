<h1>New Entry for <%= @place.name %></h1>

<%= form_for([@place, @entry]) do |f| %>

 <div class="field">
   <%= f.label :title %>
   <%= f.text_field :title %>
 </div>

 <div class="field">
   <%= f.label :description %>
   <%= f.text_area :description %>
 </div>

 <div class="field">
   <%= f.label :date %>
   <%= f.date_field :date %>
 </div>

 <div class="actions">
   <%= f.submit "Create Entry" %>
 </div>
<% end %>